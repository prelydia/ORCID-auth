        <li class="nav-item">
            <a class="nav-link text-dark" id="myFold" asp-controller="User" asp-action="ShowFolders" asp-area=""> @Localizer["Folder"] </a>
        </li>
    </ul>

    <ul class="nav navbar-nav navbar-right">
