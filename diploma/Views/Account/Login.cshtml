<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100" style="opacity: 0.6;">
            <div class="login100-form-title" style="background-image: url(images/bg-01.jpg);">
                <span class="login100-form-title-1">
                    <img src="/images/science.png" style="width: 183px; height: 183px;">
                </span>
                <p style="font-family: Century Gothic, cursive; font-size: 1.5rem;"> Личный кабинет </p>
            </div>

            <form class="login100-form validate-form" id="login-form" asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
                <div class="validation" asp-validation-summary="ModelOnly" style="margin-left: 20px; font-weight: 700; font-family: Century Gothic, cursive; color: darkred; "> </div>
                <div class="wrap-input100 validate-input m-b-26" data-validate="Введите логин!">
                    <span class="label-input100">
                        <i class="fa fa-user fa-lg"></i>
                    </span>
                    <input class="input100" type="text" id="log" asp-for="Login" name="login" style="background: url() no-repeat center left; padding-left: 37px; " />

                    <span class="focus-input100" asp-validation-for="Login" />
                </div>

                <div class="wrap-input100 validate-input m-b-18" data-validate="Введите пароль!">
                    <span class="label-input100">
                        <i class="fa fa-key fa-lg"></i>
                    </span>
                    <input class="input100" type="password" name="pass" id="password" asp-for="Password" style="background: url() no-repeat center left; padding-left: 37px; " />
                    <span class="focus-input100" asp-validation-for="Password" />
                </div>

                <!--
                                   <div class="flex-sb-m w-full p-b-30">
                    <div class="contact100-form-checkbox">
                        <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                        <label class="label-checkbox100" for="ckb1">
                            Remember me
                        </label>
                    </div>

                    <div>
                        <a href="#" class="txt1">
                            Forgot Password?
                        </a>
                    </div>
                </div>
                -->
                <div class="container-login100-form-btn">
                    <input type="hidden" name="captchaToken" id="captchaToken" />
                    <button type="submit" class="login100-form-btn" onclick="load()" id="login">
                        Войти
                    </button>
                </div>
            </form>
            <div class="text-center p-3" style="background-color: rgba(255, 255, 255); font-family: 'Gill Sans', sans-serif;">
                <!-- Регистрация с помощью ORCID -->
                <button id="borders" onclick="openLoginWindow()">
                    <img src="~/images/orcid.png" style="width: 30px; height: 30px; margin-bottom: 7px;" />
                    Войти с помощью ORCID
                </button>
                <div id="error-message" style="display:none; color:red;"></div>
            </div>

            <!-- Дефолтная регистрация -->
            <div class="text-center p-3" style="background-color: rgba(255, 255, 255); font-family: 'Gill Sans', sans-serif; display: none;">
                <div style="margin-top: -15px;">
                    <div class="cont1" style="margin-left: 15px; margin-bottom: 18px;">
                        Нет учетной записи?
                    </div>

                    <div class="cont2">
                        <button style="border-radius: 30px; height: 40px; margin-top: -10px; margin-left: 10px;" class="btn btn-success">
                            Зарегистрироваться
                        </button>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

